<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:keepScreenOn="true"
    tools:context="com.duo.superior.duo.Rede">

    <Button
        android:id="@+id/btnRedeVoltar"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="#FFFF00"
        android:text="VOLTAR"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnEsquecerSerie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:text="ESQUECER NÚMERO DE SÉRIE"
        app:layout_constraintBottom_toTopOf="@+id/textView32"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edtRedeIP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="192.168.0.2"
        android:textColor="#F6F5F5"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="IP"
        android:textColor="#FAFAFA"
        app:layout_constraintBottom_toTopOf="@+id/edtRedeIP"
        app:layout_constraintEnd_toEndOf="@+id/edtRedeIP"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/edtRedeIP" />

    <TextView
        android:id="@+id/textView36"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Porta"
        android:textColor="#FAFAFA"
        app:layout_constraintBottom_toTopOf="@+id/edtPorta"
        app:layout_constraintEnd_toEndOf="@+id/edtPorta"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="@+id/edtPorta" />

    <EditText
        android:id="@+id/edtPorta"
        android:layout_width="55dp"
        android:layout_height="53dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="502"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/edtRedeIP"
        app:layout_constraintStart_toEndOf="@+id/edtRedeIP"
        app:layout_constraintTop_toTopOf="@+id/edtRedeIP"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnRedeSalvar"
        android:layout_width="293dp"
        android:layout_height="52dp"
        android:layout_marginTop="60dp"
        android:text="Salvar"
        app:layout_constraintEnd_toEndOf="@+id/edtRedeIP"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edtRedeIP"
        app:layout_constraintTop_toBottomOf="@+id/edtRedeIP" />

    <TextView
        android:id="@+id/txtNumSerie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Numero de série:"
        android:textColor="#F8F4F4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>